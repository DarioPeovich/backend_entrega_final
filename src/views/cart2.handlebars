<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Carrito de Compras</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-..." crossorigin="anonymous">
  <link rel="stylesheet" href="/css/cart2.css" />

</head>
<body>
  <div class="container">
    <h1>Carrito de Compras</h1>

    <p id="cartId" data-cart-id="{{cart._id}}">Identificador del carrito: {{cart._id}}</p>

    <ul>
      {{#each cart.products}}
        <li class="product-item">
          <div class="row">
            <div class="col-md-2">
              <img src="{{this.product.thumbnails.[0]}}" class="img-thumbnail" alt="Miniatura del producto">
            </div>
            <div class="col-md-10">
              <p>Producto: {{this.product.title}} ({{this.product.description}})</p>
              <span>Id: {{this.product._id}}</span>
              <span>Cantidad: {{this.quantity}} Precio: ${{this.product.price}}  Stock: {{this.product.stock}}</span>
              <button class="btn btn-danger btnDeleteProduct" data-pid="{{this.product._id}}">Eliminar</button>
            </div>
          </div>
        </li>
      {{/each}}
    </ul>

    <div class="row">
      <div class="col">
        <form id="purchaseForm">
          <button type="submit" class="btn btn-success">Terminar Compra</button>
        </form>
      </div>
      <div class="col">
        <button id="redirectProductBtn" onclick="redirectProducts()" class="btn btn-primary">ir a Productos</button>
      </div>
      <div class="col">
        <button id="emptyCartBtn" onclick="emptyCart()" class="btn btn-danger">Vaciar Carrito</button>
      </div>
    </div>

    <div id="ticketInfo">
      <!-- Aquí se mostrará la información del ticket -->
    </div>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="/js/cart2.js"></script>
  <script src="/js/auxCart.js"></script>
</body>
</html>
